<div>
	<%= will_paginate @blogs %>
	<% @blogs.each do |blog| %>
		<div class="card-panel hoverable col 12">
			<div class="row">
				<div class="col s12 m10">
					<blockquote>
						<h4> <%= link_to blog.title, show_blog_path(blog) %> </h4>
					</blockquote>
					<p class='truncate'> <%= blog.body %> </p>
				</div>

				<div class='hide-on-small-only col m2' style='position:relative;'>
					<%= current_user.image ? image_tag(current_user.image.url(:thumb)) : nil %>
					<div style='position:absolute; bottom: -12;'>
					<%= "#{current_user.first_name} #{current_user.last_name}" %>
					</div>
				</div>

			</div>
		</div>
	<% end %>
</div>
