<%= form_for [current_user, @blog], url: new_blog_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.hidden_field :author, default: "#{current_user.first_name} #{current_user.last_name}" %>
  </br>
  <%= f.label :body %>
  <%= f.text_area :body %>
  </br>
  <%= f.submit "Create New Blog Post"%>
<% end %>
